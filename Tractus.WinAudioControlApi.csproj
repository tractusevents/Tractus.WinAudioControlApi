<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>WindowsAudioControlAPI_Icon.ico</ApplicationIcon>
    <Title>Tractus Windows Audio Controller API</Title>
    <Authors>Tractus Events</Authors>
    <Copyright>Tractus Events</Copyright>
    <PackageIcon>WindowsAudioControlAPI_Icon.png</PackageIcon>
    <Version>2024.8.8.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="WindowsAudioControlAPI_Icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="Serilog" Version="4.0.1" />
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.2" />
    <PackageReference Include="Serilog.Sinks.File" Version="6.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.7.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="WindowsAudioControlAPI_Icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
